model users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String  @unique
  password String
  words    words[]
}

model words {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  original     String   @unique
  translation  String
  partOfSpeech String
  examples     String[]
  definitions  String[]
  case         Json
  tag          String
  timestamp    DateTime
  users        users    @relation(fields: [usersId], references: [id])
  usersId      String   @db.ObjectId
}
